.container {
    width: 750rpx;
    /* height: 500rpx; */
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
}
.input {
    appearance: none;
    -webkit-appearance: none;
    border-radius:70rpx;
    border: 1rpx solid black;
    margin-top: 100rpx;
    width: 650rpx;
    height: 87rpx;
    position: relative;
    outline: 0;
    background-color: #fff;
    /* margin: 0 auto;    */
}
 .phone-input {
    padding-left: 110rpx;
    padding-top: 20rpx;
}
.phone-pic {
    /* display: inline-block; */
    vertical-align: middle;
    width: 70rpx;
    height: 70rpx;
    left: 25rpx;
    top: 16rpx;
    position: absolute;
    z-index: 2;
}
.phone-chacha {
    width: 30rpx;
    height: 30rpx;
    opacity: 0.5;
    position: absolute;
    right: 20rpx;
    top: 30rpx;
    z-index: 999;
}
.hidden {
    display: none;
}
.btn {
    background-color: #e64649;
    line-height: 87rpx;
}
.more {
    margin-top: 50rpx;
    font-size: 24rpx;
}
.link {
    color: #9695ff;
}
.abl {
    background: blue;
}
.unable{
  background: #eee;
  pointer-events: none;
}